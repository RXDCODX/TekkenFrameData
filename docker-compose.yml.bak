version: '3.8'

services:
  db:
    image: postgres:13
    container_name: tekken_db
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: tekken_db
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    networks:
      - tekken_network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5

  scraper:
    build:
      context: ./TekkenFrameData.Scrupper
      dockerfile: Dockerfile
    container_name: tekken_scraper
    depends_on:
      db:
        condition: service_healthy
    environment:
      DB_HOST: db
      DB_PORT: 5432
      DB_NAME: tekken_db
      DB_USER: postgres
      DB_PASSWORD: postgres
    networks:
      - tekken_network

  backend:
    build:
      context: ./TekkenFrameData.Backend
      dockerfile: Dockerfile
    container_name: tekken_backend
    depends_on:
      scraper:
        condition: service_completed_successfully
    environment:
      DB_HOST: db
      DB_PORT: 5432
      DB_NAME: tekken_db
      DB_USER: postgres
      DB_PASSWORD: postgres
    ports:
      - "8080:8080"
      - "8081:8081"
    networks:
      - tekken_network
      
  frontend:
    build:
      context: ./

volumes:
  postgres_data:

networks:
  tekken_network:
    driver: bridge